@model ProductAdminViewModel

<h3>افزودن کالا</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Slogan" class="control-label">شعار تبلیغاتی</label>
                <input asp-for="Slogan" class="form-control" placeholder="شعار"/>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">نام کالا</label>
                <input asp-for="Name" class="form-control" placeholder="نام" />
                <span asp-validation-for="Name" class="text-danger">نام خالی نباید باشد</span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">قیمت کالا</label>
                <input asp-for="Price" class="form-control" placeholder="قیمت" />
                <span asp-validation-for="Price" class="text-danger">قیمت خالی نباید باشد</span>
            </div>
            <div class="form-group">
                <label asp-for="ImgSource" class="control-label">آدرس عکس</label>
                <input asp-for="ImgSource" class="form-control" placeholder="عکس" />
            </div>
            <div class="form-group">
                <label asp-for="DiscountPercentage" class="control-label">تخفیف</label>
                <input asp-for="DiscountPercentage" class="form-control" placeholder="تخفیف" />
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label">دسته بتدی</label>
                <input asp-for="Category" class="form-control" placeholder="دسته بندی" />
                <span asp-validation-for="Category" class="text-danger">دسته بندی خالی نباید باشد</span>
            </div>
            <div class="form-group">
                <label asp-for="HtmlProductDemonstration" class="control-label">ویزگی ها (htmlDemonstration)</label>
                <input asp-for="HtmlProductDemonstration" class="form-control" placeholder="ویزگی ها" />
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <input type="reset" value="بازگشت مقادیر اولیه" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

