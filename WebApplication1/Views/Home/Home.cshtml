@model HomeViewModel

<div class="home-ad-div container-fluid">
    <img style="margin-right:11px; margin-top:6px;" src="~/css/Images/Ad/download.jfif" alt="ad-img" width="25%" height="auto" />
    <div style="margin-left:11px; margin-top:6px; float:left; width:46%; height:auto;">
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/css/Images/Ad/SlidShow/image.jpg" class="d-block w-100" alt="ad-slideshow-0">
                </div>
                <div class="carousel-item">
                    <img src="~/css/Images/Ad/SlidShow/image (1).jpg" class="d-block w-100" alt="ad-slideshow-1">
                </div>
                <div class="carousel-item">
                    <img src="~/css/Images/Ad/SlidShow/image (2).jpg" class="d-block w-100" alt="ad-slideshow-2">
                </div>
                <div class="carousel-item">
                    <img src="~/css/Images/Ad/SlidShow/image (3).jpg" class="d-block w-100" alt="ad-slideshow-3">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <img class="ad-img" src="~/css/Images/Ad/Gif-Like/1000011870.gif" alt="ad-gif-1" />
    <img class="ad-img" src="~/css/Images/Ad/Gif-Like/1000012000.gif" alt="ad-gif-2" />
</div>
<h2 style="margin-bottom:45px;"><span class="exclamation-mark-animation">!</span>هرچی بخای تو میجیکالا هست</h2>
<h3 class="text-info">جدیدترین ها<i class="fa fa-newspaper-o"></i></h3>
<div class="home-div">
    @foreach (var item in Model.NewProductsList)
    {
        <div style="height:180px; position:relative">
            <p class="home-div-product-header">@item.Slogan</p>
            <p style="color:rgb(86, 123, 147)">
                <img class="home-div-img" src="@(Url.Content(item.ImgSource))" alt="@(item.Name + "-product-img")" />
                @item.Name
                <br />
                @(item.Price)تومان
                <br />
            </p>
            <a class="btn btn-primary" style="position:absolute; bottom:5px; right:5%; width:90%"
               asp-controller="Products" asp-action="DetailedProducts" asp-route-id="@item.ProductId">
                اطلاعات بیشتر
            </a>
        </div>
    }
</div>
<h3 class="text-info">تخفیف دار ها<i class="fa fa-arrow-down"></i></h3>
<div class="home-div">
    @foreach (var item in Model.UnderPricedProductsList)
    {
    <div style="height:220px; position:relative">
        <p class="home-div-product-header">@item.Slogan</p>
        <p style="color:rgb(86, 123, 147)">
            <img class="home-div-img" src="@(Url.Content(item.ImgSource))" alt="@(item.Name + "-product-img")" />
            @item.Name
            <br />
            <span style="text-decoration:line-through" class="text-muted">@(item.Price)تومان</span>
            <br />
            @*discount*@@((100 - item.DiscountPercentage) * item.Price / 100)تومان
        </p>
        <a class="btn btn-primary" style="position:absolute; bottom:5px; right:5%; width:90%"
           asp-controller="Products" asp-action="DetailedProducts" asp-route-id="@item.ProductId">
            اطلاعات بیشتر
        </a>
    </div>
    }
</div>
<h3 class="text-info">محصولات<i class="fa fa-gift"></i></h3>
<div class="home-div home-div-products">
    <a asp-action="Products" asp-route-category="Bag" asp-route-page="1">
        <img style="position:relative; width:auto; height:110px;" src="~/css/Images/ProductsCategoryInHomeImg/bag.png" alt="ProductBag">
        <p class="font-weight-bolder text-center">کیف</p>
    </a>
    <a asp-action="Products" asp-route-category="Book" asp-route-page="1">
        <img style="position:relative; width:auto; height:110px;" src="~/css/Images/ProductsCategoryInHomeImg/book.png" alt="ProductBook">
        <p class="font-weight-bolder text-center">کتاب</p>
    </a>
    <a asp-action="Products" asp-route-category="Clothes" asp-route-page="1">
        <img style="position:relative; width:auto; height:110px;" src="~/css/Images/ProductsCategoryInHomeImg/clothes.png" alt="ProductClothes">
        <p class="font-weight-bolder text-center">پوشاک</p>
    </a>
    <a asp-action="Products" asp-route-category="Electronical" asp-route-page="1">
        <img style="position:relative; width:auto; height:110px;" src="~/css/Images/ProductsCategoryInHomeImg/electronical.png" alt="ProductElectronical">
        <p class="font-weight-bolder text-center">لوازم الکترونیکی</p>
    </a>
    <a asp-action="Products" asp-route-category="Food" asp-route-page="1">
        <img style="position:relative; width:auto; height:110px;" src="~/css/Images/ProductsCategoryInHomeImg/food.png" alt="ProductFood">
        <p class="font-weight-bolder text-center">غذایی</p>
    </a>
    <a asp-action="Products" asp-route-category="HomeAppliances" asp-route-page="1">
        <img style="position:relative; width:auto; height:110px;" src="~/css/Images/ProductsCategoryInHomeImg/homeAppliances.png" alt="ProductHomeAppliances">
        <p class="font-weight-bolder text-center">لوازم خانگی</p>
    </a>
    <a asp-action="Products" asp-route-category="Sport" asp-route-page="1">
        <img style="position:relative; width:auto; height:110px;" src="~/css/Images/ProductsCategoryInHomeImg/sport.png" alt="ProductSport">
        <p class="font-weight-bolder text-center">ورزشی</p>
    </a>
    <a asp-action="Products" asp-route-category="Stationery" asp-route-page="1">
        <img style="position:relative; width:auto; height:110px;" src="~/css/Images/ProductsCategoryInHomeImg/stationery.png" alt="ProductStationery">
        <p class="font-weight-bolder text-center">لوازم التحریر</p>
    </a>
</div>
